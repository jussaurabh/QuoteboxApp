<resources>

    <!-- Base application theme. -->
<!--     Theme.MaterialComponents.Light.NoActionBar-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--        <item name="colorAccent">@color/colorAccent</item>-->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="QuoteboxToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:fontFamily">@font/nunito</item>
    </style>

    <style name="TransparentBgTextbox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
<!--        <item name="android:layout_marginBottom">10dp</item>-->
        <item name="android:background">@color/transparent</item>
        <item name="android:textColorHint">@color/dark_lighten_2</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:fontFamily">@font/nunito</item>
    </style>

    <style name="DarkBgTextbox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
<!--        <item name="android:layout_marginBottom">10dp</item>-->
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/dark_rounded_solid_bg</item>
        <item name="android:textColorHint">@color/dark_lighten_2</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:fontFamily">@font/nunito</item>
    </style>

    <style name="LightBgTextbox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
<!--        <item name="android:layout_marginBottom">10dp</item>-->
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@drawable/whitesmoke_bg</item>
        <item name="android:textColorHint">@color/dark_lighten_2</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:fontFamily">@font/nunito</item>
    </style>


    <style name="lightButton">
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:background">@drawable/white_bg</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="darkButton">
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:background">@drawable/dark_rounded_solid_bg</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="disabledButton">
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:background">@drawable/gray_rounded_solid_bg</item>
        <item name="android:textColor">@color/dark_lighten_1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:clickable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="transparentButton">
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="darkBorderedButton">
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:background">@drawable/dark_solid_border</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="errorMessage">
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
